            <th>Sno</th>
            <th>Name</th>

            <th>Amount</th>
            <th>vendorname</th>
            <th>order status</th>
          </tr>

          <% data.forEach(function(item){ %>
          <tr>
            <td><%= i %></td>
            <td><%=item.name %></td>

            <td><%=item.amount %></td>
            <td><%=item.vname %></td>
            <td><%=item.status %></td>
            <% i++ %>
          </tr>

          <% }); %>
        </table>

        <% }else{ %>
