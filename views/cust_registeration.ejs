    <!-- customer registration form  -->

    <div class="rbox">
      <div class="fform">
        <h1>Register Now!</h1>
        <img src="/logo.png" alt="" />
        <!-- post method  -->
        <form method="POST" action="/customerregistration" class="rform">
          <!--  name= cust_name -->
          <label for="Name">
            <input
              type="text"
              name="cust_name"
              placeholder="Enter Name"
              required
            />
          </label>

          <!-- name = cust_password  -->
          <label for="Password">
            <input
              type="password"
              name="cust_password"
              placeholder="Create a strong password"
              required
            />
          </label>

          <!-- name = cust_num -->
          <label for="Number">
            <input
              type="text"
              name="cust_num"
              placeholder="Enter Mobile Number"
              required
            />
          </label>

          <!-- name = house  -->
          <label for="House No">
            <input
              type="text"
              name="house"
              placeholder="Enter House Number"
              required
            />
          </label>

          <!-- name = street  -->
          <label for="Street">
            <input
              type="text"
              name="street"
              placeholder="Enter Street"
              required
            />
          </label>

          <!-- name= landmark  -->

          <label for="Landmark">
            <input
              type="text"
              name=" landmark"
              placeholder="Enter Landmark"
              required
            />
          </label>

          <!-- name = city  -->

          <label for="City">
            <input type="text" name="city" placeholder="Enter City" required />
          </label>

          <input type="submit" class="btn" value="Register Now" />
        </form>
      </div>
